{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "es6",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "lib/es"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["./src/**/*.spec.ts"]
}